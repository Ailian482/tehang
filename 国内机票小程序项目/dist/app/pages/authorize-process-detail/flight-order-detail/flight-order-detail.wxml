<view class="order-detail" wx:if="orderDetail">
    <!-- 乘机人信息 -->
    <view class="passenger-info">
        <view>
            <view class="f-s-14 f-w-bold">乘机人信息</view>
            <view class="d-flex justify-content-sp-bw m-t-15">
                <view class="label f-s-14 text-grey3">乘机人</view>
                <view class="passenger-list flex-1">
                    <block wx:for="{{orderDetail.passengers}}" wx:for-item="passenger" wx:for-index="idx" wx:key="*this">
                        <view class="item" data-index="{{idx}}" bindtap="handleToPassengerDetailPage">
                            <view>
                                <view class="f-s-12">
                                    {{passenger.passengerName}}
                                    <text class="text-grey3">{{passenger.belongedDeptName}}</text>
                                </view>
                                <view class="f-s-12 m-t-6">
                                    <dict-transform code="{{passenger.docType}}" dict="DocType"></dict-transform>
                                    <number-encrypt class="m-l-6" value="{{passenger.docNo}}" encryptType="{{passenger.docType}}"></number-encrypt>
                                </view>
                            </view>
                            <iconfont class="text-grey3  f-s-12" icon="arrow-right"></iconfont>
                        </view>
                    </block>
                </view>
            </view>
        </view>
    </view>
    <!-- 保险信息 -->
    <view class="insurance-info" wx:if="{{insurances && insurances.length}}">
        <view class="f-s-14 f-w-bold">已购产品</view>
        <view class="d-flex m-t-15">
            <view class="label f-s-14 text-grey3">保险</view>
            <view class="flex-1 d-flex justify-content-sp-bw align-items-center p-r-16">
                <view class="insurance-list">
                    <view class="f-s-14" wx:for="{{insurances}}" wx:for-item="insurance" wx:for-index="idx" wx:key="*this">
                        <!-- 吐了，这里后端的名字叫insuranceName -->
                        <dict-transform code="{{insurance.insuranceName}}" dict="InsuranceType"></dict-transform>
                        x {{orderDetail.insuranceCount}}
                    </view>
                </view>
                <iconfont class="text-grey3  f-s-12" icon="arrow-right"></iconfont>
            </view>
        </view>
    </view>
    <!-- 自定义字段 -->
    <view class="customize-info d-flex" wx:if="{{orderDetail.customizeData}}">
        <view class="label f-s-14 f-w-bold ">{{orderDetail.customizeFieldName}}</view>
        <view class="f-s-14">{{orderDetail.customizeData}}</view>
    </view>
    <!-- 联系人信息 -->
    <view class="contact-info">
        <view class="f-s-14 f-w-bold">联系人信息</view>
        <view class="d-flex m-t-15">
            <view class="label f-s-14 text-grey3">联系人姓名</view>
            <view class="f-s-14">{{orderDetail.contactInfo.name}}</view>
        </view>
        <view class="d-flex m-t-15">
            <view class="label f-s-14 text-grey3">联系人电话</view>
            <view class="f-s-14">
                <number-encrypt value="{{orderDetail.contactInfo.mobile}}" encryptType="Mobile"></number-encrypt>
            </view>
        </view>
    </view>
</view>