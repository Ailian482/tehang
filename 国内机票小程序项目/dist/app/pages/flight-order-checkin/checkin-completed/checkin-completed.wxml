<view class="d-flex flex-direction-column h-full ">
    <top-bar backToFirstPage="{{true}}">
        <view class="text-center f-s-16 f-w-bold">值机申请</view>
    </top-bar>
    <scroll-view scroll-y="{{true}}" class="bg-grey7 text-grey1 f-s-14 flex-1 h-1">
        <view class=" bg-white text-center p-y-48">
            <image class="h-126 w-140" src="{{OSSPrefix+'/pay/pay-success.png'}}" />
            <view class="f-s-16 m-y-24">提交完成</view>
            <view class="f-s-12 text-grey2 p-x-22">
                <view>值机申请已提交，请留意短信或电话</view>
            </view>
            <view class="m-t-36 p-x-10">
                <button class="r-full bg-btn-primary text-primary f-w-bold f-s-16 p-y-9 text-white m-b-10" bindtap="throttleToOrderDetail">
                    <text>查看订单</text>
                </button>
                <button class="b-1 r-full b-primary bg-white text-primary f-w-bold f-s-16 p-y-9" bindtap="throttleToHome">
                    <text>返回首页</text>
                </button>
            </view>
        </view>
    </scroll-view>
</view>