<scroll-view class="h-full bg-grey9 f-s-14 text-grey1 p-y-8 p-x-10" scroll-y="{{true}}" bindscrolltolower="throttlescrolltolower">
    <view class="bg-white p-18 r-8 m-b-8 project-item" wx:for="{{list}}" wx:key="index" bindtap="throttleSelectProject" data-project="{{item}}">
        <view class="d-flex m-b-12">
            <view class="flex-2 text-grey3">项目编号</view>
            <view class="flex-6">{{item.code}}</view>
        </view>
        <view class="d-flex">
            <view class="flex-2 text-grey3">项目名称</view>
            <view class="flex-6">{{item.name}}</view>
        </view>
    </view>
</scroll-view>