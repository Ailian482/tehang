<view class="form-group m-t-8">
    <view class="form-item">
        <view class="label">员工姓名</view>
        <view class="control">
            <view class="content">{{orderGuest.guestName}}</view>
        </view>
    </view>
    <view class="form-item" wx:if="{{orderGuest.docType}}">
        <view class="label">证件类型</view>
        <view class="control">
            <dict-transform dict="DocType" code="{{orderGuest.docType}}"></dict-transform>
        </view>
    </view>
    <view class="form-item" wx:if="{{orderGuest.docNo}}">
        <view class="label">证件号码</view>
        <view class="control">{{orderGuest.docNo}}</view>
    </view>
    <view class="form-item" wx:if="{{orderGuest.birthday}}">
        <view class="label">出生日期</view>
        <view class="control">
            <view class="content">{{orderGuest.birthday}}</view>
        </view>
    </view>
    <view class="form-item" wx:if="{{orderGuest.mobile}}">
        <view class="label">手机号码</view>
        <view class="control">{{orderGuest.mobile}}</view>
    </view>
</view>
<view class="form-group m-t-8">
    <view class="form-item" wx:if="{{orderGuest.belongedDeptName}}">
        <view class="label">费用部门</view>
        <view class="control">
            <view class="content">{{orderGuest.belongedDeptName}}</view>
        </view>
    </view>
    <view class="form-item" wx:if="{{orderGuest.projectName}}">
        <view class="label">所属项目</view>
        <view class="control">
            <view class="content">{{orderGuest.projectName}}</view>
        </view>
    </view>
</view>
<view class="form-group m-t-8">
    <view class="form-item" wx:if="{{orderGuest.approvalStatus}}">
        <view class="label">审批状态</view>
        <view class="control">
            <dict-transform dict="OrderApprovalStatus" code="{{orderGuest.approvalStatus}}"></dict-transform>
        </view>
    </view>
    <view class="form-item" wx:if="{{orderGuest.approvalNo}}">
        <view class="label">审批单号</view>
        <view class="control">
            <view class="content">{{orderGuest.approvalNo}}</view>
        </view>
    </view>
</view>
<view class="form-group m-t-8" wx:if="{{orderGuest.flightTickets}}">
    <block wx:for="{{orderGuest.flightTickets}}" wx:for-item="ticket" wx:key="index">
        <view class="form-item">
            <view class="label">机票状态</view>
            <view class="control">
                <dict-transform dict="FlightOrderStatus" code="{{ticket.status}}"></dict-transform>
            </view>
        </view>
        <view class="form-item">
            <view class="label">值机状态</view>
            <view class="control">
                <dict-transform dict="FlightNetCheckInStatus" code="{{ticket.netCheckInStatus}}"></dict-transform>
            </view>
        </view>
    </block>
</view>
<view class="form-group m-t-8" wx:if="{{orderGuest.flightTickets}}">
    <block wx:for="{{orderGuest.flightTickets}}" wx:for-item="ticket" wx:key="index" wx:if="{{ticket.overrunInfo}}">
        <block wx:if="{{ticket.overrunInfo.authorizeStatus}}">
            <view class="form-item">
                <view class="label">授权状态</view>
                <view class="control">
                    <dict-transform dict="OrderAuthorizeStatus" code="{{ticket.overrunInfo.authorizeStatus}}"></dict-transform>
                </view>
            </view>
        </block>
        <block wx:if="{{ticket.overrunInfo.lowPriceOverrun ||ticket.overrunInfo.preDaysOverrun }}">
            <view class="form-item">
                <view class="label">超标政策</view>
                <view class="control">
                    <view wx:if="{{ticket.overrunInfo.lowPriceWarningMsg }}">
                        {{ ticket.overrunInfo.lowPriceWarningMsg }}
                    </view>
                    <view wx:if="{{ticket.overrunInfo.preDaysWarningMsg }}">
                        {{ ticket.overrunInfo.preDaysWarningMsg }}
                    </view>
                </view>
            </view>
            <view class="form-item">
                <view class="label">超标原因</view>
                <view class="control">
                    <view wx:if="{{ticket.overrunInfo.lowPriceWarningMsg }}">
                        {{ ticket.overrunInfo.preDaysWarningMsg }}
                    </view>
                    <view wx:if="{{ticket.overrunInfo.preDaysWarningMsg }}">
                        {{ ticket.overrunInfo.preDaysReasonMsg}}
                    </view>
                </view>
            </view>
        </block>
    </block>
</view>