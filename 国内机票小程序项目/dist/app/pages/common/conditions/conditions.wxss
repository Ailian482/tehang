.search-tip {
  color: #333;
  background: #f1f1f5;
  font-size: 24rpx;
  padding: 8rpx 32rpx; }

.search-result .item {
  padding: 16rpx 32rpx;
  border-bottom: 1px solid #f1f1f5;
  display: flex; }
  .search-result .item .item-type {
    color: #666666;
    font-weight: normal;
    font-size: 24rpx; }

.search-bar {
  position: sticky;
  top: 0;
  background: white;
  padding: 16rpx 32rpx; }
  .search-bar .input-wrapper {
    background: #f1f1f5;
    border-radius: 30rpx;
    font-size: 28rpx;
    font-weight: 400;
    padding: 8rpx 24rpx; }

.container {
  padding: 20rpx;
  color: #333;
  background-color: #f9f9f9; }

.condition-wrapper {
  background-color: white;
  margin-bottom: 20rpx; }
  .condition-wrapper .title {
    font-size: 26rpx;
    padding: 16rpx 24rpx 16rpx 12rpx;
    border-bottom: 2rpx solid #f1f1f5; }
  .condition-wrapper .grid {
    display: grid;
    grid-template-columns: repeat(4, 25%); }
  .condition-wrapper .condition-item {
    border-right: 1px solid #f1f1f5;
    border-bottom: 1px solid #f1f1f5;
    font-size: 24rpx;
    min-height: 66rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rpx; }
    .condition-wrapper .condition-item:nth-child(4n) {
      border-right: none; }
