<view class="text-grey1 f-s-14 h-full bg-grey9 p-y-8">
    <view class="p-y-12 p-l-16 p-r-20 bg-white d-flex align-items-center m-b-8">
        <view class="text-grey2">邮递状态</view>
        <view class="m-l-auto">
            <dict-transform dict="CustomerDistStatus" code="{{ distributionSummary.distributionTracking.customerDistStatus|| 'WaitDist'}}" />
        </view>
    </view>
    <view class="p-y-12 p-l-16 p-r-20 bg-white">
        <view class="d-flex align-items-center">
            <view class="text-grey2">邮递信息</view>
            <view class="m-l-auto">{{ distributionSummary.distribution.consignee }}</view>
        </view>
        <view class="text-right m-y-8">{{ distributionSummary.distribution.mobile }}</view>
        <view class="text-right">{{address}}</view>
    </view>
</view>