<view class="d-flex flex-direction-column h-full ">
    <top-bar backToFirstPage="{{true}}">
        <view class="text-center f-s-16 f-w-bold">{{props.title}}</view>
    </top-bar>
    <scroll-view scroll-y="{{true}}" class="bg-grey7 text-grey1 f-s-14 flex-1 h-1">
        <view class=" bg-white text-center p-y-48">
            <image class="h-126 w-140" src="{{resultTypeImageOps[props.type]}}" />
            <view class="f-s-16 m-y-24">{{props.result}}</view>
            <view class="f-s-12 text-grey2">
                <view wx:if="{{props.description}}" class="m-b-4">{{props.description}}</view>
                <view>客服电话：400-0900-737</view>
            </view>
            <view class="m-t-36 p-x-10">
                <button wx:if="{{orderId}}" class="r-full bg-btn-primary text-primary f-w-bold f-s-16 p-y-9 text-white m-b-10" bindtap="throttleToOrderDetail">
                    <text>查看订单</text>
                </button>
                <button class="b-1 r-full b-primary bg-white text-primary f-w-bold f-s-16 p-y-9" bindtap="throttleToHome">
                    <text>返回首页</text>
                </button>
            </view>
        </view>
    </scroll-view>
</view>