page {
  box-sizing: border-box;
  background: #f9f9f9; }

.tips {
  background: #fdefee;
  font-size: 24rpx;
  color: #ff474d;
  line-height: 60rpx;
  padding-left: 34rpx; }

.container {
  padding: 28rpx 32rpx 38rpx 32rpx;
  background: white; }

.total {
  font-size: 22rpx;
  padding: 0 16rpx;
  margin: 0 16rpx;
  border-radius: 18rpx;
  border: 2rpx solid #f1f1f5;
  font-weight: bold;
  color: #333333; }

.room-list {
  margin-top: 76rpx; }
  .room-list .room-item {
    margin-top: 44rpx; }
    .room-list .room-item .date-list {
      display: flex;
      flex-wrap: wrap; }
      .room-list .room-item .date-list .date-item {
        margin-right: 21px;
        margin-top: 28rpx;
        width: calc((100% - (21px * 3)) / 4);
        font-size: 24rpx;
        font-weight: bold;
        text-align: center;
        padding-top: 16rpx;
        padding-bottom: 14rpx;
        border-radius: 12rpx;
        border: 1px solid #cddbff; }
      .room-list .room-item .date-list .date-item:nth-child(4n) {
        margin-right: 0; }
      .room-list .room-item .date-list .date-item.selected {
        border: 1px solid #626cff;
        color: white;
        background: #626cff; }

.submit-btn {
  color: white;
  width: calc(100vw - 20px);
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 30rpx;
  margin: 30rpx auto 0;
  padding: 18rpx 0;
  background: linear-gradient(315deg, #6677ff 0%, #3642ff 100%);
  border-radius: 42rpx; }
