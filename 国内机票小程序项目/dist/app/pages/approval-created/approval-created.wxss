.submit-btn {
  color: white;
  width: calc(100vw - 20px);
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 30rpx;
  margin: 30rpx auto 0;
  padding: 18rpx 0;
  background: linear-gradient(315deg, #6677ff 0%, #3642ff 100%);
  border-radius: 42rpx; }
