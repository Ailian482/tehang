<view class="approval-header-placeholder"></view>
<view class="approval-header">
    <view class="nav-first">
        <view class="nav-first-item {{ selectedSource === approvalSource.Mine ? 'active' : '' }}" data-source="{{approvalSource.Mine}}" bindtap="handleSwitchNav">
            我发起的
        </view>
        <view class="nav-first-item {{ selectedSource === approvalSource.Other ? 'active' : '' }}" data-source="{{approvalSource.Other}}" bindtap="handleSwitchNav">
            我审批的
            <view wx:if="{{allToAuditNum > 0}}" class="remind-tag">{{ allToAuditNum }}</view>
        </view>
    </view>
</view>
<!-- 列表 -->
<view wx:if="{{selectedSource === approvalSource.Mine}}">
    <approval-mine></approval-mine>
</view>
<view wx:if="{{selectedSource === approvalSource.Other}}">
    <approval-other bind:updateDot="getApprovalToAuditNumber" approvalToAuditNum="{{approvalToAuditNum}}" authorizeToAuditNum="{{authorizeToAuditNum}}"></approval-other>
</view>
<!-- 发起出差计划 悬浮按钮 -->
<view class="travel-plan-btn" bindtap="toCreateApprovalPage">
    <image class="add-icon" src="{{addIconUrl}}" />
    <view>发起</view>
</view>
<!-- 自定义tabBar -->
<tab-bar active="1"></tab-bar>