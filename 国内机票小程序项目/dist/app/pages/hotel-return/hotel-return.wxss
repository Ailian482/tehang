page {
  box-sizing: border-box;
  background: #f9f9f9; }

.container {
  padding: 28rpx 32rpx 38rpx 32rpx;
  background: white; }

.total {
  font-size: 22rpx;
  padding: 0 16rpx;
  margin: 0 16rpx;
  border-radius: 18rpx;
  border: 2rpx solid #f1f1f5;
  font-weight: bold;
  color: #333333; }

.room-list {
  margin-top: 76rpx; }

.guest-item {
  padding: 46rpx 28rpx 46rpx 20rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  border: 1px solid #cddbff;
  font-size: 24rpx; }

.submit-btn {
  color: white;
  width: calc(100vw - 20px);
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 30rpx;
  margin: 30rpx auto 0;
  padding: 18rpx 0;
  background: linear-gradient(315deg, #6677ff 0%, #3642ff 100%);
  border-radius: 42rpx; }
