<view class="container">
    <view class="nav">
        <view class="type-item" bindtap="throttleScrollToTop">全部({{total}})</view>
        <block wx:for="{{list}}" wx:key="index">
            <view class="type-item" bindtap="throttleScrollTo" data-id="#picture_{{index}}">
                <text>{{ item.cnPictureType }}({{item.photoList.length}})</text>
            </view>
        </block>
    </view>
    <view class="p-x-10 p-y-8">
        <block wx:for="{{list}}" wx:key="index">
            <view class="f-s-18 text-grey1 m-b-8 f-w-bold" id="picture_{{index}}">
                <text>{{ item.cnPictureType }}({{item.photoList.length}})</text>
            </view>
            <view class="images-wrapper">
                <image wx:for="{{item.photoList}}" wx:key="index" wx:for-item="pic" src="{{pic.url}}" bindtap="throttleImageTap" data-url="{{pic.url}}" data-list="{{item.photoList}}" />
            </view>
        </block>
    </view>
</view>