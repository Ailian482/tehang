.container {
  background: #f9f9f9;
  min-height: 100vh;
  color: #333; }

.pictures-wrapper {
  position: relative; }
  .pictures-wrapper swiper {
    height: 380rpx; }
  .pictures-wrapper image {
    width: 100%;
    height: 100%; }
  .pictures-wrapper .to-pictures {
    position: absolute;
    left: 20rpx;
    bottom: 30rpx;
    background: rgba(0, 0, 0, 0.37);
    border-radius: 200000rpx;
    z-index: 1;
    padding: 4rpx 8rpx;
    align-items: center;
    display: flex; }

.info {
  padding: 24rpx 40rpx 16rpx 32rpx;
  color: #333; }
  .info .more {
    color: #666; }

.booking-info-wrapper {
  padding: 16rpx 20rpx; }
  .booking-info-wrapper .booking-date {
    background: #f0f4ff;
    border-radius: 16rpx;
    color: #666;
    font-size: 28rpx;
    padding: 20rpx 20rpx 20rpx 40rpx;
    display: flex;
    align-items: center; }
    .booking-info-wrapper .booking-date .total-days {
      width: 72rpx;
      border-radius: 16rpx;
      border: 1px solid #baceff;
      margin: 0 40rpx;
      text-align: center;
      font-size: 20rpx;
      vertical-align: middle; }

.rooms-wrapper {
  background: #f9f9f9;
  padding: 8rpx 0; }

.icon-star {
  color: #fea000;
  font-size: 20rpx;
  margin-right: 8rpx; }

.supplier-wrapper .activated {
  color: #3642ff;
  font-weight: bold; }
  .supplier-wrapper .activated .indicator {
    display: block;
    height: 8rpx;
    width: 100%;
    border-radius: 4rpx;
    background: linear-gradient(90deg, #3642ff 0%, #6ba2fe 100%); }

.supplier-wrapper .indicator {
  display: none; }
