page {
  height: 100vh; }

.footer {
  box-shadow: 0px -5px 12px 0px rgba(217, 226, 233, 0.5);
  z-index: 1; }
  .footer button {
    line-height: 42px;
    background: linear-gradient(315deg, #6677ff 0%, #3642ff 100%);
    border-radius: 21px;
    color: white;
    font-weight: 500;
    font-size: 16px; }

.form .form-item {
  display: flex;
  background: white;
  border-bottom: 2rpx solid #f1f1f5;
  align-items: center; }
  .form .form-item.has-error {
    border-color: #fb0101; }
    .form .form-item.has-error .error {
      display: block !important; }
  .form .form-item .label {
    flex: 2;
    padding-left: 32rpx;
    color: #666666;
    padding-top: 28rpx;
    padding-bottom: 28rpx; }
  .form .form-item .control {
    flex: 6;
    position: relative;
    padding-right: 32rpx; }
    .form .form-item .control .content {
      display: flex;
      align-items: center;
      padding-top: 28rpx;
      padding-bottom: 28rpx; }
      .form .form-item .control .content iconfont {
        color: #999999;
        font-size: 24rpx;
        padding-left: 16rpx; }
    .form .form-item .control .error {
      display: none;
      font-size: 20rpx;
      color: #fb0101;
      position: absolute;
      bottom: 0; }
