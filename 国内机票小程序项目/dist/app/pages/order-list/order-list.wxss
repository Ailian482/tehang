.orders-container {
  color: #333333;
  background: #f9f9f9;
  height: 100vh; }
  .orders-container .nav-tab-container {
    position: fixed;
    width: 100%; }
    .orders-container .nav-tab-container .nav-tab {
      display: flex;
      justify-content: space-between;
      background: #fff;
      padding: 0 46rpx; }
      .orders-container .nav-tab-container .nav-tab .tab-item {
        padding: 16rpx 0;
        font-size: 28rpx;
        color: #666666; }
      .orders-container .nav-tab-container .nav-tab .tab-item-active {
        padding: 16rpx 0;
        font-size: 28rpx;
        font-weight: bold;
        position: relative; }
      .orders-container .nav-tab-container .nav-tab .tab-item-active::after {
        position: absolute;
        content: '';
        width: 100%;
        height: 6rpx;
        left: 0;
        bottom: 0;
        border-radius: 6rpx;
        background: linear-gradient(90deg, #3642ff 0%, #6ba2fe 100%); }
  .orders-container .order-list-content {
    background: #f9f9f9;
    padding-top: 100rpx;
    padding-bottom: 28rpx; }
    .orders-container .order-list-content .order-item {
      padding: 30rpx 24rpx 34rpx 28rpx;
      margin: 0 20rpx;
      background: #ffffff;
      box-shadow: 0px -5px 12px 0px rgba(217, 226, 233, 0.5);
      border-radius: 20rpx;
      margin-bottom: 20rpx;
      display: flex; }
      .orders-container .order-list-content .order-item .order-icon {
        width: 36rpx;
        height: 36rpx;
        margin-right: 16rpx;
        margin-top: 8rpx; }
      .orders-container .order-list-content .order-item .order-content {
        flex: 1;
        display: flex;
        justify-content: space-between; }
        .orders-container .order-list-content .order-item .order-content .order-detail {
          flex: 1;
          font-size: 24rpx; }
          .orders-container .order-list-content .order-item .order-content .order-detail .order-traveller {
            display: flex; }
        .orders-container .order-list-content .order-item .order-content .order-status .order-price {
          color: #fe7800;
          display: flex;
          align-items: center;
          justify-content: flex-end; }
