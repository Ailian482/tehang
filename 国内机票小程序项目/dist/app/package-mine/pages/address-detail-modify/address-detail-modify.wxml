<view class="form-group m-t-10">
    <view class="form-item {{ errMsgs.consignee ? 'has-error' : ''}}">
        <view class="label">姓名</view>
        <view class="control">
            <view class="content">
                <input type="text" placeholder="请输入姓名" value="{{formData.consignee}}" class="flex-1" data-name="consignee" bindinput="handleInput" />
            </view>
            <view class="error">{{errMsgs.consignee}}</view>
        </view>
    </view>
    <view class="form-item {{ errMsgs.mobile ? 'has-error' : ''}}">
        <view class="label">手机号</view>
        <view class="control">
            <view class="content">
                <input type="text" placeholder="请输入手机号" value="{{formData.mobile}}" class="flex-1" data-name="mobile" bindinput="handleInput" />
            </view>
            <view class="error">{{errMsgs.mobile}}</view>
        </view>
    </view>
</view>
<view class="form-group m-t-10">
    <view class="form-item {{ errMsgs.province || errMsgs.city || errMsgs.area ? 'has-error' : ''}}">
        <view class="label">所在区域</view>
        <view class="control">
            <view class="content" bindtap="handleShowPicker">
                <view class="flex-1" wx:if="{{formData.province || formData.city || formData.area }}">
                    {{formData.province}} {{formData.city}} {{formData.area}}
                </view>
                <view class="flex-1 text-grey4" wx:else>请选择所在区域</view>
                <iconfont icon="arrow-right" />
            </view>
            <view class="error">{{errMsgs.province || errMsgs.city || errMsgs.area}}</view>
        </view>
    </view>
    <view class="form-item {{ errMsgs.address ? 'has-error' : ''}}">
        <view class="label">详细地址</view>
        <view class="control">
            <view class="content">
                <input type="text" placeholder="请输入详细地址" value="{{formData.address}}" class="flex-1" data-name="address" bindinput="handleInput" />
            </view>
            <view class="error">{{errMsgs.address }}</view>
        </view>
    </view>
</view>
<view class="bg-white p-y-6 p-x-16 f-s-14 d-flex justify-content-sp-bw align-items-center m-t-10">
    <view class="text-grey2">设为默认地址</view>
    <van-switch checked="{{ formData.defaulted }}" bind:change="handleSwitchDefaulted" />
</view>
<!-- 底部 -->
<footer-container>
    <view class="submit-btn" slot="content" bindtap="handleSubmit">保存</view>
</footer-container>
<!-- 区域选择器 -->
<van-popup z-index="99999" show="{{ showAreaPicker }}" position="bottom" bind:close="handleClosePicker">
    <area-picker bind:confirm="handleConfirmArea" bind:cancel="handleClosePicker"></area-picker>
</van-popup>
<van-dialog id="van-dialog" confirm-button-color="#3642ff" />
<loading wx:if="{{isLoading}}" title="{{loadingTitle}}" />