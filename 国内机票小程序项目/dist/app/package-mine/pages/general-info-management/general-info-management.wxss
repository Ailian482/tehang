page {
  box-sizing: border-box;
  background: #f9f9f9; }

.header-nav {
  display: flex;
  justify-content: space-between;
  background: white;
  padding: 0 76rpx;
  box-shadow: 0px 4px 5px 0px #e9e8e8; }
  .header-nav .nav-item {
    width: 92rpx;
    padding: 16rpx 0;
    font-size: 28rpx;
    text-align: center;
    color: #333333; }
  .header-nav .nav-item-active {
    width: 92rpx;
    padding: 16rpx 0;
    font-size: 28rpx;
    text-align: center;
    color: #3642ff;
    font-weight: bold;
    position: relative; }
  .header-nav .nav-item-active::after {
    content: '';
    width: 100%;
    height: 8rpx;
    background: linear-gradient(90deg, #3642ff 0%, #6ba2fe 100%);
    box-shadow: 0px 4px 5px 0px #e9e8e8;
    border-radius: 4rpx;
    position: absolute;
    left: 0;
    bottom: 0; }

.add-btn {
  position: fixed;
  right: 36rpx;
  bottom: 72rpx; }
  .add-btn image {
    width: 112rpx;
    height: 112rpx; }
