<view class="traveler-list" wx:if="{{travelerList && travelerList.length}}">
    <van-swipe-cell right-width="{{ 100 }}" wx:for="{{travelerList}}" wx:for-item="traveler" wx:for-index="idx" wx:key="id">
        <view class="traveler-item" slot="">
            <view class="traveler-info">
                <view class="employee-name">
                    <employee-name employeeInfo="{{traveler}}"></employee-name>
                </view>
                <view class="doc-info">
                    <block wx:if="{{traveler.docs.length}}">
                        <view class="doc-item" wx:for="{{traveler.docs}}" wx:key="*this">
                            <view class="label">
                                <dict-transform dict="DocType" code="{{item.docType}}"></dict-transform>
                            </view>
                            <view>
                                <number-encrypt value="{{item.docNo}}" encryptType="{{item.docType}}"></number-encrypt>
                            </view>
                        </view>
                    </block>
                    <view class="f-s-12 text-red1" wx:else>
                        <iconfont icon="tip"></iconfont>
                        请补充证件信息 {{traveler.docs.length}}
                    </view>
                </view>
            </view>
            <view class="operate" bindtap="handleToModifyPage" data-id="{{traveler.id}}">
                <iconfont icon="modify"></iconfont>
            </view>
        </view>
        <view slot="right" class="delete-btn" bindtap="handleDeleted" data-id="{{traveler.id}}">
            <iconfont icon="trash"></iconfont>
            <view>删除</view>
        </view>
    </van-swipe-cell>
</view>
<block wx:else>
    <empty-list tips="暂无常用旅客"></empty-list>
</block>