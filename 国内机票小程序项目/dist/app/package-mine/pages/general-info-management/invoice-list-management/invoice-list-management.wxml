<view class="invoice-list" wx:if="{{invoiceList && invoiceList.length}}">
    <van-swipe-cell right-width="{{ 100 }}" wx:for="{{invoiceList}}" wx:for-item="invoiceItem" wx:for-index="idx" wx:key="id">
        <view class="invoice-item" slot="">
            <view class="flex-1">
                <view class="f-s-16 f-w-bold text-grey1 d-flex align-items-center">
                    {{invoiceItem.title}}
                    <view wx:if="{{invoiceItem.defaulted}}" class="default-tag">默认</view>
                </view>
                <view class="f-s-12 text-grey3 m-t-6" wx:if="{{invoiceItem.registrationNo}}">
                    税号 {{invoiceItem.registrationNo}}
                </view>
                <view class="f-s-12 text-grey3 m-t-6">
                    <dict-transform dict="InvoiceType" code="{{invoiceItem.type}}"></dict-transform>
                </view>
            </view>
            <view class="f-s-20 text-grey4" bindtap="handleToModifyPage" data-invoice="{{invoiceItem}}">
                <iconfont icon="modify"></iconfont>
            </view>
        </view>
        <view slot="right" class="delete-btn" bindtap="handleDeleted" data-id="{{invoiceItem.id}}">
            <iconfont icon="trash"></iconfont>
            <view>删除</view>
        </view>
    </van-swipe-cell>
</view>
<block wx:else>
    <empty-list tips="暂无发票"></empty-list>
</block>