<view class="reset-password-form form-group">
  <view class="form-item">
    <view class="control">
      <view class="content">
        当前账号：
        <number-encrypt value="{{accountMobile}}" encryptType="Mobile"></number-encrypt>
      </view>
    </view>
  </view>
  <view class="form-item {{ errMsgs.verificationCode ? 'has-error' : ''}}">
    <view class="control">
      <view class="content">
        <input type="text" placeholder="请输入验证码" value="{{formData.verificationCode}}" class="flex-1" data-name="verificationCode" bindinput="handleInput" />
      </view>
      <view class="error">{{errMsgs.verificationCode}}</view>
    </view>
    <view class="suffix f-s-14">
      <text wx:if="{{countTime}}">发送({{countTime}}s)</text>
      <text wx:else bindtap="sendVerificationCode" class="text-primary">{{codeText}}</text>
    </view>
  </view>
  <view class="form-item {{ errMsgs.password ? 'has-error' : ''}}">
    <view class="control">
      <view class="content">
        <input type="text" password="{{isPassword}}" placeholder="请设置新密码" value="{{formData.password}}" class="flex-1" data-name="password" bindinput="handleInput" />
      </view>
      <view class="error">{{errMsgs.password}}</view>
    </view>
    <view class="suffix" bindtap="handleCleartext">
      <iconfont icon="hide-pwd" class="f-s-10" wx:if="{{isPassword}}" />
      <iconfont icon="show-pwd" class="f-s-12" wx:else />
    </view>
  </view>
  <view class="form-item {{ errMsgs.repeatPassword ? 'has-error' : ''}}">
    <view class="control">
      <view class="content">
        <input type="text" password="{{isPassword}}" placeholder="请确认新密码" value="{{formData.repeatPassword}}" class="flex-1" data-name="repeatPassword" bindinput="handleInput" />
      </view>
      <view class="error">{{errMsgs.repeatPassword}}</view>
    </view>
    <view class="suffix" bindtap="handleCleartext">
      <iconfont icon="hide-pwd" class="f-s-10" wx:if="{{isPassword}}" />
      <iconfont icon="show-pwd" class="f-s-12" wx:else />
    </view>
  </view>
  <view class="submit-btn" bindtap="handleSubmit">确认</view>
</view>
<loading wx:if="{{isLoading}}" title="{{loadingTitle}}" />