page {
  box-sizing: border-box;
  background: #f9f9f9; }

.container {
  padding: 0 20rpx; }

.feedback-content {
  background: white;
  margin-top: 20rpx;
  padding: 28rpx 34rpx 44rpx 32rpx;
  border-radius: 8rpx;
  position: relative; }

.accepted-bg {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 22rpx;
  right: 20rpx; }

.picture-list {
  margin-top: 44rpx; }
  .picture-list .picture-item {
    width: 144rpx;
    height: 144rpx;
    border-radius: 8rpx;
    margin-right: 24rpx; }

.history-content {
  background: white;
  margin-top: 12rpx;
  padding: 46rpx 54rpx 44rpx 32rpx;
  font-size: 28rpx; }
  .history-content .content-item {
    display: flex;
    position: relative; }
    .history-content .content-item .date-time {
      flex: 0 0 auto;
      padding-right: 32rpx;
      text-align: right;
      position: relative;
      top: -10rpx; }
    .history-content .content-item .detail {
      padding-left: 32rpx;
      padding-bottom: 32rpx;
      color: #333333;
      position: relative; }
      .history-content .content-item .detail .detail-text {
        position: relative;
        top: -10rpx;
        word-break: break-all; }
      .history-content .content-item .detail:not(.is-last) {
        min-height: 100rpx; }
      .history-content .content-item .detail:not(.is-first)::before {
        content: '';
        position: absolute;
        top: 0;
        width: 12rpx;
        height: 12rpx;
        border-radius: 50%;
        background-color: #d8d8d8;
        left: -6rpx; }
      .history-content .content-item .detail.is-first::before {
        content: '';
        background-image: url("https://tehang-assets.oss-cn-shenzhen.aliyuncs.com/weapp/common/completed.svg");
        background-repeat: no-repeat;
        background-size: cover;
        position: absolute;
        top: -6rpx;
        width: 32rpx;
        height: 32rpx;
        border-radius: 50%;
        left: -16rpx;
        z-index: 1; }
      .history-content .content-item .detail:not(.is-last)::after {
        content: '';
        width: 1px;
        height: 100%;
        background-color: #d8d8d8;
        position: absolute;
        top: 0;
        left: 0; }
