<view class="container">
  <view class="feedback-content">
    <view class="f-s-14 text-grey3">
      <date-format value="{{feedbackDetail.createDateTime}}" format="yyyy-MM-dd HH:mm"></date-format>
    </view>
    <view class="f-s-14 text-grey1 m-t-8">{{feedbackDetail.description}}</view>
    <view class="picture-list">
      <block wx:for="{{feedbackDetail.pictureUrls}}" wx:key="*this">
        <image class="picture-item" src="{{item}}" lazy-load="true" data-src="{{item}}" bindtap="handleShowPopup" />
      </block>
    </view>
    <image wx:if="{{feedbackDetail.accepted}}" class="accepted-bg" src="{{acceptedImageUrl}}" lazy-load="true" />
  </view>
  <view class="history-content" wx:if="{{feedbackDetail.history.length}}">
    <view class="content-item" wx:for="{{feedbackDetail.history}}" wx:key="*this">
      <view class="date-time {{index === 0 ? '' : 'text-grey3'}}">
        <view class="f-s-12">
          <date-format value="{{item.createDateTime}}" format="MM-dd"></date-format>
        </view>
        <view class="f-s-10">
          <date-format value="{{item.createDateTime}}" format="HH:mm"></date-format>
        </view>
      </view>
      <view class="detail {{index === 0 ? 'is-first' : 'text-grey3'}} {{index === (feedbackDetail.history.length-1) ? 'is-last' : ''}}">
        <view class="detail-text">{{item.description}}</view>
      </view>
    </view>
  </view>
</view>
<van-popup show="{{ showPopup }}" bind:close="handleClose">
  <image src="{{currentImage}}" lazy-load="true" />
</van-popup>
<loading wx:if="{{isLoading}}" title="{{loadingTitle}}" />