<view class="point-container" wx:if="{{pointList && pointList.length }}">
    <view class="point-item" wx:for="{{pointList}}">
        <view class="d-flex justify-content-sp-bw f-s-16">
            <view class="text-grey1">
                {{item.pointsHistoryType === 'Adjust' ? '积分调整' : item.bigOrderNo}}
            </view>
            <view class="{{ (item.pointsAmount || 0 ) >= 0 ? 'text-green1' : 'text-orange1'}}">
                <block wx:if="{{item.pointsAmount>0}}">+{{item.pointsAmount}}</block>
                <block wx:else>{{item.pointsAmount}}</block>
            </view>
        </view>
        <view class="d-flex justify-content-sp-bw  f-s-12 text-grey3">
            <view>{{item.briefInfoDescription}}</view>
            <view>
                <date-format value="{{item.createTime}}" format="yyyy-MM-dd HH:mm"></date-format>
            </view>
        </view>
    </view>
</view>
<empty-list wx:else tips="暂无积分记录"></empty-list>
<view class="point-rule-btn" bindtap="handToPointRulePage">
    <view class="m-t-8">积分</view>
    <view>规则</view>
</view>
<loading wx:if="{{isLoading}}" title="{{loadingTitle}}" />