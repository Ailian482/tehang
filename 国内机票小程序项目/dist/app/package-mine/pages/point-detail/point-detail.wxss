.point-container {
  border-top: 1px solid #f1f1f5;
  border-bottom: 1px solid #f1f1f5; }

.point-item {
  margin-left: 32rpx;
  padding: 24rpx 32rpx 22rpx 0;
  border-bottom: 1px solid #f1f1f5; }

.point-item:last-child {
  border-bottom: none; }

.point-rule-btn {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 12px 0px rgba(199, 209, 216, 0.5);
  border: 1px solid #dbdce6;
  font-size: 24rpx;
  color: #333333;
  position: fixed;
  right: 20rpx;
  bottom: 90rpx;
  text-align: center;
  line-height: 1;
  background: #fff; }
