page {
  box-sizing: border-box;
  background: #f9f9f9; }

.list-item {
  background: #fff; }
  .list-item .van-cell {
    padding: 32rpx;
    background: transparent; }
    .list-item .van-cell .cell-title {
      font-size: 32rpx;
      color: #333333; }
    .list-item .van-cell .cell-value {
      font-size: 30rpx;
      color: #666666;
      margin-right: 24rpx; }
    .list-item .van-cell .title-icon {
      color: #afafaf;
      margin-right: 36rpx; }
  .list-item .van-cell:after {
    right: 0; }

.avatar .van-cell {
  padding: 14rpx 32rpx;
  align-items: center; }
  .avatar .van-cell .wx-avatar {
    width: 84rpx;
    height: 84rpx;
    display: inline-block;
    border-radius: 50%;
    overflow: hidden; }
  .avatar .van-cell .thumbnail {
    width: 84rpx;
    height: 84rpx;
    display: inline-block;
    border-radius: 50%;
    overflow: hidden; }
    .avatar .van-cell .thumbnail image {
      width: 84rpx;
      height: 84rpx; }

.login-out {
  margin-top: 148rpx;
  background: #fff;
  font-size: 32rpx;
  color: #fb0101;
  text-align: center;
  line-height: 112rpx; }

.invitation-tips {
  font-size: 24rpx;
  color: #fe7800;
  line-height: 60rpx;
  padding: 0 28rpx 0 34rpx;
  background: #fcf5ee;
  border-radius: 16rpx; }
  .invitation-tips .tip-icon {
    width: 24rpx;
    height: 24rpx;
    margin-right: 12rpx; }

.text-underline {
  text-decoration: underline; }

.van-cell__value {
  word-break: break-all; }
