<view>
    <view wx:if="{{invitationCount}}" class="invitation-tips d-flex align-items-center justify-content-sp-bw" bindtap="handleShowInvitations">
        <view class="d-flex align-items-center">
            <image src="{{tipIcon}}" class="tip-icon" />
            {{invitationCount}}家公司邀请您加入，
            <view class="text-underline">点击去处理</view>
        </view>
        <iconfont icon="arrow-right" class="f-s-10"></iconfont>
    </view>
    <view class="list-item {{invitationCount ? '' : 'm-t-14'}}">
        <van-cell class="avatar" title="头像" title-class="cell-title">
            <!-- 微信open-data接口调整 -->
            <!-- <view class="wx-avatar" slot="">
                <open-data type="userAvatarUrl"></open-data>
            </view> -->
            <view class="thumbnail" slot="">
                <image wx:if="{{employeeInfo.gender}}" src="{{userSexIcon[employeeInfo.gender]}}" lazy-load="true" />
                <image wx:else src="{{userSexIcon.default}}" lazy-load="true" />
            </view>
        </van-cell>
        <van-cell title="姓名" title-class="cell-title" wx:if="{{employeeInfo}}">
            <employee-name class="text-grey1 f-s-15" employeeInfo="{{employeeInfo}}" slot=""></employee-name>
        </van-cell>
    </view>
    <view class="list-item">
        <van-cell title="切换身份" title-class="cell-title" value="{{employeeInfo.corpName}}" value-class="cell-value" bindtap="toEmployeeRoles">
            <iconfont class="text-grey2" icon="arrow-right f-s-12" slot="right-icon"></iconfont>
        </van-cell>
    </view>
    <view class="list-item" wx:if="{{employeeInfo}}">
        <van-cell title="国籍" title-class="cell-title">
            <dict-transform class="text-grey1 f-s-15" dict="Country" code="{{employeeInfo.nationality}}" slot=""></dict-transform>
        </van-cell>
        <van-cell title="出生日期" title-class="cell-title" value="{{employeeInfo.birthday}}" value-class="text-grey1 f-s-15"></van-cell>
        <van-cell title="邮箱" title-class="cell-title" value="{{employeeInfo.email || '-'}}" value-class="text-grey1 f-s-15"></van-cell>
    </view>
    <view class="list-item">
        <van-cell title="绑定手机" title-class="cell-title" value-class="cell-value">
            <number-encrypt value="{{accountMobile}}" encryptType="Mobile" slot=""></number-encrypt>
        </van-cell>
        <van-cell title="重置密码" title-class="cell-title" bindtap="toResetPassword">
            <iconfont class="text-grey2" icon="arrow-right f-s-12" slot="right-icon"></iconfont>
        </van-cell>
    </view>
    <view class="login-out" bindtap="loginOut">退出登录</view>
</view>
<!-- 邀请处理弹窗 -->
<block wx:if="{{invitationCount}}">
    <invitations-popup showPopup="{{showInvitations}}" bind:close="getAllInvitationsCount"></invitations-popup>
</block>