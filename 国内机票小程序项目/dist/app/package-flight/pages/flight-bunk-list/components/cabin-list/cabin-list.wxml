<view class="bunk-list">
    <view class="bunk-item" wx:for="{{showCabinList}}" wx:key="id">
        <!-- 舱位信息 -->
        <view>
            <view class="d-flex align-items-center">
                <view class="d-flex align-items-baseline m-r-4">
                    <view class="f-s-14 text-orange1">￥</view>
                    <view class="f-s-20 text-orange1 f-w-b">
                        {{ item.adultPrice.factBunkPrice }}
                    </view>
                </view>
                <!-- 价格标识 -->
                <view class="{{bunkTagClass[item.bunkTag]}}" wx:if="{{item.bunkTag}}">
                    <dict-transform dict="FlightBunkTag" code="{{item.bunkTag }}"></dict-transform>
                </view>
                <!-- 补充标识：协议价/出票较慢 -->
                <view class="m-l-4 protocol-tag {{item.bunkMinorTag === 'Protocal' ? 'tag-cyan' : 'tag-grey'}}" wx:if="{{item.bunkMinorTag !== 'None'}}">
                    <dict-transform dict="FlightBunkMinorTag" code="{{item.bunkMinorTag }}"></dict-transform>
                </view>
                <!-- 代购费 -->
                <view class="m-l-4 text-red2 f-w-bold f-s-8" wx:if="{{isOnBusiness && item.purchasingFee > 0}}" bindtap="handleShowPurchasingFeeModal">
                    代购费: ￥{{ item.purchasingFee }}
                </view>
            </view>
            <view class="f-s-12 m-t-8" data-id="{{item.id}}" bindtap="handleShowPoliciesAndBaggage">
                <view class="m-r-4 d-inline-block">{{ item.bunkName }}</view>
                <discount value="{{item.adultPrice.discount}}"></discount>
                <view class="d-inline-block">/{{item.bunkCode}}</view>
                <view class="text-grey10 p-x-4 d-inline-block">|</view>
                退改签规则
                <view class="text-grey10 p-x-4 d-inline-block">|</view>
                <block wx:if="{{item.adultPrice.freeBaggage == 0}}">无免费托运行李额</block>
                <block wx:elif="{{item.adultPrice.freeBaggag == null}}">行李额按航司规定执行</block>
                <block wx:else>托运行李额{{ item.adultPrice.freeBaggage }}KG</block>
                <iconfont icon="arrow-right" class="f-s-10 text-grey3 m-l-4"></iconfont>
            </view>
        </view>
        <!-- 舱位状态：票量，预定按钮 -->
        <view data-id="{{item.id}}" bindtap="handleSelectedBunk">
            <view class="booking-btn">
                <view class="count-tips" wx:if="{{item.remainNum <= 5}}">
                    <view class="tips">
                        剩
                        <view class="f-s-10">{{item.remainNum}}</view>
                        张
                    </view>
                </view>
                {{isChange ? '改签' : '预订'}}
            </view>
        </view>
    </view>
    <view class="show-more" wx:if="{{isShowMore}}" bindtap="handleShowMore">
        查看更多报价
        <iconfont icon="arrow-down" class="f-s-10 m-l-6"></iconfont>
    </view>
</view>