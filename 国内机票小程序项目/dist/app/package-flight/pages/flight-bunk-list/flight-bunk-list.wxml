<view wx:if="{{flightDetail}}" class="flight-bunk-container ">
    <view>
        <!-- 航班详情 -->
        <view class="flight-detail-container">
            <view class="d-flex align-items-center m-l-12">
                <view class="route-type m-r-8">{{routePre}}</view>
                <airline-thumbnail class="airline-thumbnail" airlineCode="{{flightDetail.airline}}"></airline-thumbnail>
                <view class="f-s-12 text-grey1 m-l-2">
                    {{ flightDetail.airlineName }} {{ flightDetail.flightNo }}
                    <plane-type class="m-l-4" value="{{flightDetail.planeType}}"></plane-type>
                    <date-format class="m-l-4" value="{{flightDetail.departure.dateTime}}"></date-format>
                </view>
            </view>
            <!-- 航班出发到达信息 -->
            <view class="d-flex align-items-center justify-content-sp-bw p-x-50">
                <view>
                    <view class="f-s-24 f-w-bold text-center">
                        <date-format value="{{flightDetail.departure.dateTime}}" format="HH:mm"></date-format>
                    </view>
                    <view class="f-s-12">
                        {{ flightDetail.departure.airportName }} {{flightDetail.departure.terminal || ''}}
                    </view>
                </view>
                <view class="text-center relative">
                    <view class="stop-tip" wx:if="{{flightDetail.stops}}">经停</view>
                    <image class="route-arrow" src="{{flightRouteArrowSrc}}" lazy-load="true" />
                </view>
                <view>
                    <view class="f-s-24 f-w-bold d-flex justify-content-center">
                        <date-format value="{{flightDetail.arrival.dateTime}}" format="HH:mm"></date-format>
                        <view class="cross-day">
                            <count-cross-day timeArray="{{[flightDetail.departure.dateTime, flightDetail.arrival.dateTime]}}"></count-cross-day>
                        </view>
                    </view>
                    <view class="f-s-12">
                        {{ flightDetail.arrival.airportName }} {{flightDetail.arrival.terminal || ''}}
                    </view>
                </view>
            </view>
            <view class="f-s-12 text-grey3 text-center m-t-10">
                总时长：
                <time-duration value="{{[flightDetail.departure.dateTime,flightDetail.arrival.dateTime]}}"></time-duration>
                餐食:{{ flightDetail.meal }}
            </view>
        </view>
        <!-- 舱位信息 -->
        <view class="bunks-container">
            <!-- 同时存在经济舱和公务/头等舱时才展示分类；否则直接展示全部 -->
            <van-tabs wx:if="{{economyCabins.length && businessCabins.length}}" tab-class="tab-item" tab-active-class="text-primary f-w-b" active="{{ active }}">
                <van-tab title="经济舱">
                    <cabin-list isChange="{{isChange}}" isOnBusiness="{{isOnBusiness}}" cabinList="{{economyCabins}}" bind:selected="selectedBunk" bind:purchasingModal="showPurchasingModal" bind:policiesAndBaggage="showPoliciesAndBaggage"></cabin-list>
                </van-tab>
                <van-tab title="公务舱/头等舱">
                    <cabin-list isChange="{{isChange}}" isOnBusiness="{{isOnBusiness}}" cabinList="{{businessCabins}}" bind:selected="selectedBunk" bind:purchasingModal="showPurchasingModal" bind:policiesAndBaggage="showPoliciesAndBaggage"></cabin-list>
                </van-tab>
            </van-tabs>
            <view wx:else>
                <cabin-list isOnBusiness="{{isOnBusiness}}" cabinList="{{flightDetail.bunks}}" bind:selected="selectedBunk" bind:purchasingModal="showPurchasingModal" bind:policiesAndBaggage="showPoliciesAndBaggage"></cabin-list>
            </view>
        </view>
    </view>
    <view class="flight-ad-footer">
        <image class="flight-ad" src="{{flightBookingAd}}" lazy-load="{{true}}" />
    </view>
</view>
<!-- 差旅政策 -->
<flight-travel-policy></flight-travel-policy>
<!-- 代理费提示 modal -->
<van-dialog id="van-dialog" confirm-button-color="#3642ff" />
<!-- 退改签规则/行李额 -->
<bunk-policies-and-baggage paramsList="{{policiesParamsList}}"></bunk-policies-and-baggage>