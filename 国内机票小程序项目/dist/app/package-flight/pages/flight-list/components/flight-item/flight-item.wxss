.flight-item {
  margin-top: 12rpx;
  padding: 20rpx 30rpx 28rpx 30rpx;
  background: white;
  position: relative; }
  .flight-item .approaching-tip {
    position: absolute;
    left: 0;
    top: 0;
    border-radius: 0px 0px 8px 0px;
    background: #ffeeeb;
    color: #f75e53;
    font-size: 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    padding-left: 12rpx;
    padding-right: 20rpx;
    font-weight: bold; }
  .flight-item .airline-thumbnail {
    width: 34rpx;
    height: 24rpx;
    display: flex; }
  .flight-item .route-arrow {
    width: 100rpx;
    height: 10rpx; }
  .flight-item .stop-tip {
    font-size: 20rpx;
    color: #626cff;
    position: absolute;
    left: 0;
    width: 100%;
    text-align: center; }

.cross-day {
  display: inline-block;
  font-size: 20rpx;
  color: #ff474d; }

.bunk-info {
  text-align: right;
  flex: 0 0 auto;
  width: auto;
  margin-left: 8rpx; }

.width-100 {
  width: 100%; }
