    padding-left: 22rpx;
    padding-right: 26rpx;
    padding-top: 4rpx; }
    .route-info-nav .route-info .route-to-icon {
      width: 28rpx;
      height: 28rpx; }

.route-content .route-detail {
  padding: 62rpx 32rpx 86rpx 36rpx;
  display: flex;
  justify-content: space-between; }

.split-line {
  width: 6rpx;
  height: 124rpx;
  border-radius: 4rpx;
  margin: 22rpx 24rpx 0 24rpx;
  background: #bec1d4; }
