.route-header {
  padding: 0 24rpx 0 20rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: white; }

.route-type {
  padding: 0 20rpx;
  font-size: 22rpx;
  line-height: 40rpx;
  color: white;
