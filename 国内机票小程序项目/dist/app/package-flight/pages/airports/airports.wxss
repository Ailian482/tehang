.hot-city-container .city-header {
  background: #f9f9f9;
  font-size: 28rpx;
  line-height: 64rpx;
  padding: 0 32rpx; }

.hot-city-container .hot-city-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 32rpx;
  background: white;
  padding-bottom: 28rpx; }
  .hot-city-container .hot-city-list .city-item {
    margin-right: 8px;
    margin-top: 28rpx;
    width: calc((100% - (8px * 3)) / 4);
    font-size: 28rpx;
    text-align: center;
    padding-top: 16rpx;
    padding-bottom: 14rpx;
    border-radius: 8rpx;
    background: #f7f7fc; }
  .hot-city-container .hot-city-list .city-item:nth-child(4n) {
    margin-right: 0; }

.city-letter-container .letter-header {
  background: #f9f9f9;
  font-size: 28rpx;
  line-height: 64rpx;
  padding: 0 32rpx; }

.city-letter-container .letter-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 32rpx;
  background: white;
  padding-bottom: 28rpx; }
  .city-letter-container .letter-list .letter-item {
    margin-right: 8px;
    margin-top: 28rpx;
    width: calc((100% - (8px * 7)) / 8);
    font-size: 28rpx;
    text-align: center;
    line-height: 72rpx;
    border-radius: 8rpx;
    background: #f7f7fc; }
  .city-letter-container .letter-list .letter-item:nth-child(8n) {
    margin-right: 0; }

