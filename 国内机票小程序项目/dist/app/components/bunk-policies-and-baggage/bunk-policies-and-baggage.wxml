<van-popup wx:if="{{visible}}" show="{{ visible}}" round position="bottom" custom-style="max-height: 70%;" lock-scroll="true" bind:close="handleClosePopup">
    <view class="popup-header-container">
        <view class="popup-header">
            <view>退改签规则/行李额</view>
            <iconfont icon="close" bindtap="handleClosePopup"></iconfont>
        </view>
    </view>
    <view class="policies-content">
        <van-tabs tab-class="tab-item" tab-active-class="tab-item-active" active="{{ active }}" line-width="70" line-height="3">
            <van-tab title="退改签规则">
                <view class="box-shadow"></view>
                <view class="tab-item-content">
                    <view class="tab-item-header">
                        <image class="header-icon" src="{{policiesIcon}}" lazy-load="{{true}}" />
                        退改签规则
                    </view>
                    <view class="policy-detail" wx:for="{{policiesAndBaggageList}}" wx:key="index">
                        <view class="flight-route-info" wx:if="{{isRoundTrip}}">
                            <view class="f-w-bold">{{index === 0 ? '去程' : '返程'}}：</view>
                            <airline-thumbnail class="airline-thumbnail" airlineCode="{{flightRoutes[index].airlineCode}}"></airline-thumbnail>
                            <view class="m-l-2">
                                {{ flightRoutes[index].airlineName }} {{ flightRoutes[index].flightNo }}
                                <plane-type class="m-l-4" value="{{flightRoutes[index].planeType}}"></plane-type>
                                <date-format class="m-l-4" value="{{flightRoutes[index].departureDate}}"></date-format>
                            </view>
                        </view>
                        <view class="detail-table">
                            <view class="table-row border-b">
                                <view class="col-item col-label">退票费</view>
                                <view class="col-item col-value">
                                    {{item.returnPolicy||'按航司规定执行'}}
                                </view>
                            </view>
                            <view class="table-row">
                                <view class="col-item col-label">改期费</view>
                                <view class="col-item col-value">
                                    {{item.returnPolicy||'按航司规定执行'}}
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </van-tab>
            <van-tab title="行李规定">
                <view class="box-shadow"></view>
                <view class="tab-item-content">
                    <view class="tab-item-header">
                        <image class="header-icon" src="{{baggageIcon}}" lazy-load="{{true}}" />
                        行李额
                    </view>
                    <view class="policy-detail" wx:for="{{policiesAndBaggageList}}" wx:key="index">
                        <view class="flight-route-info" wx:if="{{isRoundTrip}}">
                            <view class="f-w-bold">{{index === 0 ? '去程' : '返程'}}：</view>
                            <airline-thumbnail class="airline-thumbnail" airlineCode="{{flightRoutes[index].airlineCode}}"></airline-thumbnail>
                            <view class="m-l-2">
                                {{ flightRoutes[index].airlineName }} {{ flightRoutes[index].flightNo }}
                                <plane-type class="m-l-4" value="{{flightRoutes[index].planeType}}"></plane-type>
                                <date-format class="m-l-4" value="{{flightRoutes[index].departureDate}}"></date-format>
                            </view>
                        </view>
                        <view class="detail-table">
                            <view class="table-row border-b">
                                <view class="col-item col-label">托运行李</view>
                                <view class="col-item col-value">
                                    {{item.freeBaggageDesc||'按航司规定执行'}}
                                </view>
                            </view>
                            <view class="table-row">
                                <view class="col-item col-label">手提行李</view>
                                <view class="col-item col-value">
                                    {{item.freeHandBaggageDesc||'按航司规定执行'}}
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </van-tab>
        </van-tabs>
    </view>
</van-popup>