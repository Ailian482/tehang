.scroll-container {
  width: calc(100vw - 57px);
  white-space: nowrap;
  padding: 10rpx 0 10rpx 20rpx; }

.date-item {
  width: 104rpx;
  height: 104rpx;
  color: #666666;
  font-size: 22rpx;
  display: inline-block;
  text-align: center;
  border-radius: 8rpx; }
  .date-item .data-info {
    position: relative;
    top: 50%;
    transform: translateY(-50%); }

.date-item.active {
  background: #3642ff;
  color: white; }

.date-picker {
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 114rpx;
  height: 120rpx;
  box-shadow: 0px -5px 12px 0px rgba(217, 226, 233, 0.5); }
