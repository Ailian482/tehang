<view class="room-detail-container" wx:if="{{roomDetail}}">
    <view class="room-title">{{roomDetail.roomName}}</view>
    <view class="slides-container">
        <swiper class="slides-content" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
            <block wx:for="{{roomDetail.pictures}}" wx:key="*this">
                <swiper-item>
                    <view class="slides-item">
                        <image mode="scaleToFill" src="{{item.pictureUrl}}"></image>
                    </view>
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="room-basic-info">
        <view class="room-info">
            <view class="room-icon-value" wx:if="{{roomDetail.area}}">
                <iconfont icon="area" size="12"></iconfont>
                {{roomDetail.area}}
            </view>
            <view class="room-icon-value" wx:if="{{roomDetail.bedType}}">
                <iconfont icon="bed" size="12"></iconfont>
                {{roomDetail.bedType}}
            </view>
        </view>
        <view class="room-facilities">
            <view class="f-s-14 m-b-10 f-w-500">房间设施</view>
            <view class="room-facilities-list">
                <view class="room-icon-value" wx:if="{{roomDetail.wifi}}">
                    <iconfont icon="wifi" size="12"></iconfont>
                    Wi-Fi
                </view>
                <view class="room-icon-value" wx:if="{{roomDetail.floor}}">
                    <iconfont icon="floor" size="12"></iconfont>
                    {{roomDetail.floor}}层
                </view>
                <view class="room-icon-value" wx:if="{{roomDetail.windowType}}">
                    <iconfont icon="window" size="12"></iconfont>
                    {{roomDetail.windowType}}
                </view>
                <view class="room-icon-value" wx:if="{{roomDetail.breakfast}}">
                    <iconfont icon="breakfast" size="12"></iconfont>
                    {{roomDetail.breakfast}}
                </view>
                <view class="room-icon-value" wx:if="{{roomDetail.maxCount}}">
                    <iconfont icon="people" size="12"></iconfont>
                    {{roomDetail.maxCount}}
                </view>
            </view>
        </view>
    </view>
    <view class="room-booking-rule text-grey1" wx:if="{{rule}}">
        <view class="f-s-14 f-w-bold">退订政策</view>
        <view class="f-s-12 m-t-6">{{rule}}</view>
    </view>
</view>