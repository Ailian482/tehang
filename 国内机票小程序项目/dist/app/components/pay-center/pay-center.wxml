<van-popup show="{{ visible }}" round closeable position="bottom" custom-style="height: 600rpx" bind:close="throttleClose">
    <view class="d-flex flex-direction-column f-s-14 text-grey1 h-full">
        <view class="p-t-18">
            <view class="f-w-bold f-s-16 text-center">订单支付</view>
        </view>
        <scroll-view class="flex-1 h-1" scroll-y="{{true}}">
            <view class="p-y-12">
                <view class="p-t-24 d-flex p-x-32 align-items-center">
                    <text wx:if="{{payInfo.payMode === PayModeCorpCredit}}">支付后将扣除公司授信</text>
                    <text wx:else>微信支付</text>
                    <view class="flex-1 text-orange1 text-right">
                        <text class="m-r-4">¥</text>
                        <text class="f-s-18 f-w-bold">{{payInfo.price}}</text>
                    </view>
                </view>
            </view>
        </scroll-view>
        <view class="footer p-y-16 p-x-10">
            <button bindtap="throttlePay">支付</button>
        </view>
    </view>
</van-popup>
<loading wx:if="{{isLoading}}" title="{{loadingTitle}}" bindtap="hideLoading" />